            <Blend />
         </effect></Label>
      <TextField fx:id="txtLogin" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="500.0" promptText="Nom d'utilisateur">
